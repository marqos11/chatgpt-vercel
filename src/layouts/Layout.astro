---
export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/openai.webp" />
    <link href="/remixicon.css" rel="stylesheet" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>

    <!-- styles -->
    <link rel="stylesheet" href="/global.css" />
  </head>

  <body>
    <div class="layout">
      <slot />
    </div>
  </body>

  <style>
    html,
    body {
      margin: 0;
      padding: 0;
    }

    .layout {
      width: 100%;
      min-height: 100vh;
      margin: 0 auto;
      padding: 30px 0;
      box-sizing: border-box;
      display: flex;
      flex-direction: column;
    }

    /** markdown base styling */
    .prose {
      color: #333;
      max-width: 100%;
    }

    .prose h1,
    .prose h2,
    .prose h3,
    .prose h4,
    .prose h5,
    .prose h6 {
      font-weight: bold;
      margin-bottom: 0.75em;
      line-height: 1.3;
    }

    .prose p {
      margin-bottom: 1em;
      line-height: 1.65;
    }

    .prose ul,
    .prose ol {
      margin-bottom: 1em;
      padding-left: 1.25em;
    }

    /** medium zoom */
    .medium-zoom-overlay {
      z-index: 20;
    }

    .medium-zoom-image {
      z-index: 21;
    }

    /** FIX: remove unwanted divider lines */
    .prose hr {
      display: none !important;
    }

    /* mobile style */
    @media screen and (max-width: 768px) {
      html {
        font-size: 14px;
      }
    }
  </style>
</html>
